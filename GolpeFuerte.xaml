<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionAuto.GolpeFuerte" 
             Padding="0">

    <!-- Contenido principal -->
    <Grid>
        <!-- Imagen de Fondo -->
        <Image Source="app.png" Aspect="Fill" />

        <!-- ScrollView principal que contiene todo el contenido -->
        <ScrollView VerticalScrollBarVisibility="Default">
            <VerticalStackLayout 
                Spacing="15"
                Padding="20,40,20,30"
                VerticalOptions="Center"
                HorizontalOptions="Center">

                <!-- Título con fondo semitransparente para mejor legibilidad -->
                <Border 
                    BackgroundColor="White" 
                    Opacity="0.9" 
                    StrokeShape="RoundRectangle 10"
                    Padding="15,10">
                    <Label 
                        Text="Adjunte fotografías de la parte o partes afectadas del vehículo"
                        TextColor="OrangeRed"
                        FontSize="24"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="Center"
                        FontFamily="AL" />
                </Border>

                <!-- Etiqueta de instrucción -->
                <Label 
                    Text="(Máximo 3 imágenes)"
                    TextColor="Black"
                    FontSize="18"
                    HorizontalOptions="Center"
                    Margin="0,0,0,10" />

                <!-- Botón para seleccionar fotografías -->
                <Button 
                    Text="SELECCIONAR FOTOGRAFÍAS"
                    TextColor="White"
                    WidthRequest="280"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    BackgroundColor="OrangeRed"
                    HeightRequest="50"
                    Margin="0,10,0,20"
                    Clicked="selectedImage_Clicked" />

                <!-- Contenedor de imágenes con diseño mejorado -->
                <Border 
                    BackgroundColor="White" 
                    Opacity="0.9"
                    StrokeShape="RoundRectangle 15"
                    Padding="15"
                    Margin="0,0,0,20">

                    <VerticalStackLayout Spacing="15">
                        <!-- Título de la sección de imágenes -->
                        <Label 
                            Text="Imágenes seleccionadas:"
                            TextColor="Black"
                            FontSize="18"
                            FontAttributes="Bold"
                            HorizontalOptions="Center"
                            Margin="0,0,0,5" />

                        <!-- Imagen 1 con borde y etiqueta -->
                        <Frame 
                            BorderColor="Gray" 
                            CornerRadius="10" 
                            Padding="5">
                            <VerticalStackLayout>
                                <Label 
                                    Text="Imagen 1" 
                                    HorizontalOptions="Center"
                                    FontAttributes="Bold" />
                                <Image 
                                    x:Name="selectedImage1"
                                    HeightRequest="200"
                                    Aspect="AspectFit"
                                    HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Imagen 2 con borde y etiqueta -->
                        <Frame 
                            BorderColor="Gray" 
                            CornerRadius="10" 
                            Padding="5">
                            <VerticalStackLayout>
                                <Label 
                                    Text="Imagen 2" 
                                    HorizontalOptions="Center"
                                    FontAttributes="Bold" />
                                <Image 
                                    x:Name="selectedImage2"
                                    HeightRequest="200"
                                    Aspect="AspectFit"
                                    HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Imagen 3 con borde y etiqueta -->
                        <Frame 
                            BorderColor="Gray" 
                            CornerRadius="10" 
                            Padding="5">
                            <VerticalStackLayout>
                                <Label 
                                    Text="Imagen 3" 
                                    HorizontalOptions="Center"
                                    FontAttributes="Bold" />
                                <Image 
                                    x:Name="selectedImage3"
                                    HeightRequest="200"
                                    Aspect="AspectFit"
                                    HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Border>

                <!-- Botón Continuar -->
                <Button 
                    x:Name="continueButton"
                    Text="CONTINUAR"
                    TextColor="White"
                    WidthRequest="280"
                    FontAttributes="Bold"
                    CornerRadius="20"
                    BackgroundColor="OrangeRed"
                    HeightRequest="50"
                    Margin="0,10,0,20"
                    IsEnabled="False"
                    Clicked="ButtonContinuar"/>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Imagen de Ayuda en la esquina superior derecha (fuera del ScrollView) -->
        <Image 
            Source="pregunta.png" 
            Aspect="AspectFit" 
            WidthRequest="35" 
            HeightRequest="35" 
            HorizontalOptions="End" 
            VerticalOptions="Start"
            Margin="0,20,20,0">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnImageTapped" />
            </Image.GestureRecognizers>
        </Image>
    </Grid>
</ContentPage>